<Window x:Class="Tfour_Main.ForgotCredentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tfour_Main"
        mc:Ignorable="d"
        Title="ForgotCredentials" Height="300" Width="445.209" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="yellowpanel.bmp"/>
        </Grid.Background>
        <Label Content="Enter your email address" HorizontalAlignment="Left" Margin="100,66,0,0" VerticalAlignment="Top" Width="164" Height="30"/>
        <TextBox x:Name="Textbox_Email" HorizontalAlignment="Left" Height="23" Margin="100,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260"/>
        <Button x:Name="Button_RetriveUserName" Content="Get Username" HorizontalAlignment="Left" Margin="84,150,0,0" VerticalAlignment="Top" Width="127" Height="28" Click="Button_RetriveUserName_Click" BorderThickness="10,1"/>
        <Button x:Name="Button_ResetPassword" Content="Get password" HorizontalAlignment="Left" Margin="233,151,0,0" VerticalAlignment="Top" Width="127" Click="Button_ResetPassword_Click" Height="26" BorderThickness="10,1"/>
        <Button x:Name="Button_Back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Back_Click" Margin="189,209,0,0" Height="31" BorderThickness="10,1"/>
    </Grid>

</Window>
