<Window x:Class="Tfour_Main.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="525">
    <Grid Background="#FF43BD86">
        <Button x:Name="Button_playerOneLogin" Content="Login" HorizontalAlignment="Left" Margin="28,199,0,0" VerticalAlignment="Top" Width="100" Height="39" Click="Button_playerOneLogin_Click"/>
        <Grid x:Name="Grid_gameOptions" HorizontalAlignment="Left" Height="286" Margin="215,25,0,0" VerticalAlignment="Top" Width="280" Background="#FFB03C3C">
            <Button x:Name="Button_Play" Content="Play" HorizontalAlignment="Left" Margin="97,241,0,0" VerticalAlignment="Top" Width="92" Height="24" Click="Button_Play_Click"/>
        </Grid>
        <Button x:Name="Button_ForgetPassword" Content="Forget Password" HorizontalAlignment="Left" Margin="28,258,0,0" VerticalAlignment="Top" Width="116" Click="Button_ForgetPassword_Click"/>
        <Button x:Name="Button_Register" Content="Register" HorizontalAlignment="Left" Margin="28,291,0,0" VerticalAlignment="Top" Width="75" Click="Button_Register_Click"/>
        <Label Content="USERNAME" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.12,1.167"/>
        <Label Content="PASSWORD" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.12,1.167"/>
        <TextBox x:Name="Textbox_Username" HorizontalAlignment="Left" Height="23" Margin="81,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Textbox_Password" HorizontalAlignment="Left" Height="23" Margin="81,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Button_View_Profile" Content="Profile" HorizontalAlignment="Left" Margin="311,25,0,0" VerticalAlignment="Top" Width="75" Click="Button_View_Profile_Click"/>

    </Grid>
</Window>
